<h4 class="box-heading"><%= @user.name %></h4>
<img src="<%= @user.image %>">
  <% if @user.trips.count == 0 %>
    <p>You haven't added any trips yet.</p><br>
  <% else %>
    <p>You've added <%= pluralize(@user.trip_count, "trip") %>.</p>
    <span class="bold-text">Last Trip Added:</span>
    <span class="no-underline"><%= link_to @user.last_trip.city.name, user_trip_path(@user, @user.last_trip) %></span><br><br>
    <%= link_to "View My 5-Star Trips", five_star_path %><br><br>
    <%= link_to "See All My Trips", user_trips_path(@user) %><br>
  <% end %>
  <%= link_to "Add a New Trip", new_user_trip_url(@user) %>