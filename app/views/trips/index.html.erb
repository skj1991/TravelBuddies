<h4 class="align-table"><%= @user.name %>'s Trips</h4>
<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Must See Attraction</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @trips.each do |trip| %>
    <tr class="border-bottom">
      <td class="no-underline"><%= link_to trip.city.name, user_trip_path(@user, trip) %></td>
      <td><%= trip.must_visit %></td>
      <% if @user == current_user %>
        <td><%= link_to "Edit Trip", edit_user_trip_url(@user, trip), :method => 'get' %></td>
      <% else %>
        <td> </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="button-below-table">
  <% if @user == current_user %>
    <%= link_to "Add New Trip", new_user_trip_url(@user), :class => 'btn btn-sm btn-primary btn-rounded' %>
  <% end %><br><br>
  <span class="blue-bold"><%= link_to "<-- Return to My Profile", user_path(@user) %></span>
</div>
