<h2 class="align-table">Explore Cities</h2>
<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Average Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
    <tr class="border-bottom">
      <td class="no-underline"><%= link_to city.combined_name, city_path(city) %></td>
      <td><%= city.rating_avg %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="button-below-table">
  <%= link_to "Add New City", new_city_url, :class => 'btn btn-sm btn-primary btn-rounded' %>
</div>